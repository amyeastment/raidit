<h2>Add A Character!</h2>

<h3>First, choose which game this character is in</h3>

<%= link_to "World of Warcraft", "#", "data-game" => "wow" %>

<div class="wow">
  <%= form_tag characters_path, :class => "form-inline" do %>
    <%= text_field_tag :name, "", :placeholder => "Character Name" %>
    <%= button_tag "Add Character", :class => "btn" %>
  <% end %>
</div>
