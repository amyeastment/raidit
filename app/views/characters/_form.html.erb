<fieldset>
  <legend>Basic Information</legend>

  <%= f.input :name %>
  <%= f.input :character_class do %>
    <%= f.select :character_class, character_classes_for_game("wow"), {}, {:class => "character-select"} %>
  <% end %>

  <%= f.input :guild_id, :label => "Guild", :input_html => {:class => "guild-select"} %>

</fieldset>

<fieldset class="add-guild">
  <legend>Add a Guild</legend>

  <div>
    <%= f.simple_fields_for :guild do |g| %>
      <%= g.input :region, :input_html => {:maxlength => 2, :class => "input-two-char"} %>
      <%= g.input :server %>
      <%= g.input :name %>
    <% end %>
  </div>

</fieldset>

