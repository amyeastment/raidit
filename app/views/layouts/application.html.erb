<!DOCTYPE html>
<html>
  <head>
    <title>Raid It</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>

    <%= yield :header %>
  </head>
  <body>

    <div class="container">
      <%= render_flash_messages %>
      <div class="content clearfix">
        <div class="main-nav clearfix">
          <% if current_user %>
            <ul class="nav nav-left nav-pills">
              <li class="active">
                <%= link_to "Home", root_path %>
              </li>
              <li>
                <%= link_to "Characters", characters_path %>
              </li>
              <li>
                <%= link_to "Raids", raids_path %>
              </li>
            </ul>
          <% end %>

          <ul class="nav nav-right nav-pills">
            <% if current_user %>
              <li>
                <%= link_to "Profile", "#" %>
              </li>
              <li>
                <%= link_to "Log Out", logout_path %>
              </li>
            <% else %>
              <li>
                <%= link_to "Sign Up", "#" %>
              </li>
              <li>
                <%= link_to "Log In", login_path %>
              </li>
            <% end %>
          </ul>
        </div>

        <%= yield %>
      </div>

      <footer>
        <p>&copy; RaidIt <%= Date.today.year %></p>
      </footer>

    </div>
  </body>
</html>
