.form
  %table
    %tr
      %td.key= f.label :date, "Date"
      %td= f.text_field :date

    %tr
      %td.key= f.label :invite_time, "Invite Time"
      %td= f.text_field :invite_time

    %tr
      %td.key= f.label :start_time, "Start Time"
      %td= f.text_field :start_time

    %tr
      %td.key= f.label :location, "Location"
      %td= f.text_field :location

    %tr
      %td.key= f.label :description, "Description"
      %td= f.text_area :description, :rows => 4, :cols => 30

.queues
  %h3 Role Queue Sizes
  %table
    %tr
      %td.presets{:colspan => 2}
        = link_to "10-man", "#", "data-tanks" => "2", "data-healers" => "2", "data-dps" => "6", :class => "button preset"
        = link_to "25-man", "#", "data-tanks" => "3", "data-healers" => "6", "data-dps" => "16", :class => "button preset"
    %tr
      %td.key= f.label :tanks, "Tanks"
      %td= f.text_field :tanks, :size => 4

    %tr
      %td.key= f.label :healers, "Healers"
      %td= f.text_field :healers, :size => 4

    %tr
      %td.key= f.label :dps, "DPS"
      %td= f.text_field :dps, :size => 4

