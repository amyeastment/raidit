<h1>Raid on <%= @raid.when.to_s(:full) %> to <%= @raid.where %></h1>

<h3>Invites start at <%= @raid.invite_at.to_s(:with_am_pm) %></h3>
<h3>Raid starts at <%= @raid.start_at.to_s(:with_am_pm) %></h3>

<section class="accepted">
  <h3>Accepted</h3>
  <%= render :partial => "signup", :collection => @signups[:accepted] %>
</section>

<section class="available">
  <h3>Available</h3>
  <%= render :partial => "signup", :collection => @signups[:available] %>
</section>

<section class="cancelled">
  <h3>Cancelled</h3>
  <%= render :partial => "signup", :collection => @signups[:cancelled] %>
</section>

<section class="signup">
  <% if @current_user_characters.empty? %>
    <p>You need a character to sign up to raid</p>
  <% else %>
    <h4>Sign Up for this Raid</h4>

    <%= form_tag raid_signups_path(@raid) do %>
      <%= select_tag :character, option_list_of_characters(@current_user_characters) %>
      <%= submit_tag "Sign Up" %>
    <% end %>
  <% end %>
</section>
