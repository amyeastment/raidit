<%= form_for raid, :class => "form-inline" do |f| %>
  <%= text_field_tag :where, raid.where, :placeholder => "Where" %>
  <%= text_field_tag :when, raid.when, :placeholder => "What Day" %>
  <%= text_field_tag :start, raid.start_at, :placeholder => "Starting At" %>
  <br/>
  <br/>

  <%= text_field_tag :tank, raid.role_limit(:tank), :placeholder => "Tanks" %>
  <%= text_field_tag :dps, raid.role_limit(:dps), :placeholder => "DPS" %>
  <%= text_field_tag :healer, raid.role_limit(:healer), :placeholder => "Healers" %>

  <br/>
  <br/>
  <%= button_tag raid.persisted? ? "Update Raid" : "Schedule" , :class => "btn" %>
<% end %>
