.raid

  %h3 Raid Info

  .register
    %button.large{:type => "submit"}
      Queue With 
      = @main.name

    or
    = link_to "Queue with another", "#", :class => "queue_another"

    .queue_form
      %p
        = label_tag :character_id, "Character:"
        = select_tag :character_id, character_list(@characters, @main)

      %p
        = label_tag :role, "Role:"
        = select_tag :role, role_list(@main)

      %p
        %button.small{:type => "submit"} Add to Queue

  .info
    %p
      %strong Date:
      = @raid.date

    %p
      %strong Invite Time:
      = @raid.invite_time

    %p
      %strong Start Time:
      = @raid.start_time

    %br
    
    %p
      %strong Where:
      = @raid.location

    %p
      %strong Description:
      = @raid.description

  .queues

    .left
      = render_cell :raid, :queue, :queue => :tanks, :raid => @raid

      = render_cell :raid, :queue, :queue => :healers, :raid => @raid

    .right
      = render_cell :raid, :queue, :queue => :dps, :raid => @raid

    .clear
